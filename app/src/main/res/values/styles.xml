<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/app_accent_color</item>
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="colorPrimaryDark">@color/app_secundary_color</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_accent_color</item>
    </style>

    <style name="TableHeaderStyle" parent="AppTheme">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableRowStyle" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/app_primarytext_color</item>
    </style>

    <style name="TableInfoHeaderStyle" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
